- title "New submission for " + @assignment.name + " (#{@course.code})"
.row
  .col-md-12
    %h1.page-header
      = "New submission for " + @assignment.name + " (#{@course.code})"
    %p
      = @assignment.description
    = form_for @submission, :html => {:class => 'form-horizontal'} do |f|
      %input{name: "authenticity_token", type: "hidden", value: form_authenticity_token}
      %input{name: "assignment_id", type: "hidden", value: @assignment.id}
      %p
        Upload your zip file, then click submit.
      = f.file_field :zipfile, accept: 'application/zip'
      %button{type: "submit", class: "btn btn-primary", style: "float: right; margin-top: 1em;"} Submit
